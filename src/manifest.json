{
  "manifest_version": 3,
  "name": "Professor Prebid",
  "version": "2.10",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["inject.bundle.js", "contentScript.bundle.js"]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["injected.bundle.js", "app.html", "openDfpConsole.bundle.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["activeTab", "webNavigation", "webRequest", "storage", "tabs", "unlimitedStorage", "scripting"]
}
